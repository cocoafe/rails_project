<!DOCTYPE html>
<html>
<head>
  <title>ProjectVodafone</title>
  <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<% flash.each do |name, msg| %>
  <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
    <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
  </div>
<% end %>
<div class="header-cont">
  <%= link_to 'Home', home_index_path unless current_page?(home_index_path)%>
  <%= link_to 'Aliens' , aliens_path %> 
  <%= link_to 'Products' , products_path %>
  <%= link_to 'Planet' , planets_path %>
  <%= link_to "Logs", logs_path %>
  <%= link_to "Charts", charts_index_path %>
  <div class="logout">
  <%= current_user.username.capitalize if current_user.present?  %>
  <%= link_to 'Logout', destroy_user_session_path, method: :delete%>
  </div>
</div>
<br>
<%= yield %>
</body>
</html>
